---
- name: Creates directory
  file: path=/var/tmp/{{ app_id }}  state=directory recurse=yes
  delegate_to: localhost

- name: Create json body
  template: src=application.json.j2 dest=/var/tmp/{{ app_id }}/application.json
  delegate_to: localhost

- create flocker volume
  command: docker volume create -d flocker -o size={{ db_size }} --name {{ app_id }}
  delegate_to: {{ groups["slave"][0] }}

